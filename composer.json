{
  "name": "xp-devs/rector-verify",
  "description": "Rector refactoring to switch from PHPHunit assertions to Codeception Verify",
  "require": {
    "php": ">=8.0",
    "rector/rector": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "codeception/verify": "^3.0",
    "symfony/finder": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "XpDevs\\RectorVerify\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\XpDevs\\RectorVerify\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "@php vendor/bin/phpunit --colors=never"
    ]
  }
}
